<h1 align="center">Login</h1>
 <%= form_for :login, url: login_index_path do |f| %>
    <div class="field" align="center">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field" align="center">
      <%= f.label :senha %><br />
      <%= f.password_field :senha, autocomplete: "off" %>
    </div>
    <div class="actions" align="center">
      <%= f.submit class: 'btn btn-primary', value: 'Entrar' %>
    </div>
  <% end %>
