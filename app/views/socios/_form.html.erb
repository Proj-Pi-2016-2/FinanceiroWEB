<%= form_for(@socio) do |f| %>
  <% if @socio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@socio.errors.count, "erro") %> encontrados:</h2>

      <ul>
      <% @socio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome , class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :cpf %><br>
    <%= f.text_field :cpf , class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email , class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :telefone %><br>
    <%= f.text_field :telefone , class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :endereco %><br>
    <%= f.text_field :endereco , class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :data_de_nascimento%><br>
    <%= f.date_select :dataNascimento, start_year: 1900 , class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :sexo %><br>
    <%= f.select :sexo, ['Masculino', 'Feminino', 'Outro'], class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :cadeira %><br>
    <%= f.number_field :cadeira, class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :senha %><br>
    <%= f.password_field :password , class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :"confirmação senha"%><br>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :permissão %><br>
    <%= f.text_field :permissao , class: "form-control"%>
    <%#= f.select :permissao, options_for_select(['Socio','Diretor','Tesoureiro'], :selected => params[:permissao]), {}, { :class => 'span3 controls controls-row' } %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary', value: 'Concluir' %>
  </div>
<% end %>
