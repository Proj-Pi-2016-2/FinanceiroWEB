<%= form_for(@transacao_entrada) do |f| %>
  <% if @transacao_entrada.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transacao_entrada.errors.count, "erro") %> encontrados:</h2>

      <ul>
      <% @transacao_entrada.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :valor %><br>
    <%= f.text_field :valor, class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :data_entrada %><br>
    <%= f.date_select :data_entrada %>
  </div>
  <div class="field">
    <%= f.label :justificativa_de_entrada %><br>
    <%= f.text_area :justifica_entrada, size: "20x6" , class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :tipo %><br>
    <%= f.select :tipo, ['Mensalidade','Doação', 'Outro']%>
  </div>
    <div class="field">
      <%= f.label :Socios %><br>
      <%= f.collection_select :idSocio, Socio.all.reject {|socio| socio.id == 1}, :id, :id%>
    </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary', value: 'Concluir' %>
  </div>
<% end %>
